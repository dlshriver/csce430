package csce430;

import java.util.*;
import java.io.*;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Assembler {

	public static void main(String args[]){
		HashMap <String, String> hexOp = new HashMap<String, String>();
		hexOp.put("add", "A");
		hexOp.put("sub", "A");
		hexOp.put("and", "A");
		hexOp.put("or", "A");
		hexOp.put("xor", "A");
		hexOp.put("sll", "B");
		hexOp.put("cmp", "E");
		hexOp.put("jr", "F");
		hexOp.put("lw", "8");
		hexOp.put("sw", "9");
		hexOp.put("addi", "C");
		hexOp.put("b", "0");
		hexOp.put("bal", "4");
		hexOp.put("j", "2");
		hexOp.put("jal", "6");
		hexOp.put("li", "3");
		
		HashMap <String, String> hexCond = new HashMap<String, String>();
		hexCond.put("EQ", "0");
		hexCond.put("NE", "1");
		hexCond.put("CS", "2");
		hexCond.put("CC", "3");
		hexCond.put("MI", "4");
		hexCond.put("PL", "5");
		hexCond.put("VS", "6");
		hexCond.put("VC", "7");
		hexCond.put("HI", "8");
		hexCond.put("LS", "9");
		hexCond.put("GE", "A");
		hexCond.put("LT", "B");
		hexCond.put("GT", "C");
		hexCond.put("LE", "D");
		hexCond.put("AL", "E");
		hexCond.put("NV", "F");
		
		HashMap<String, String> branches = new HashMap<String, String>();
		
		Scanner s = null;
		
		try{
			s = new Scanner(new File("data/assembly.txt"));
		}catch (FileNotFoundException e){
			e.printStackTrace();
		}
		
		String instruction = "";
		String[] tokens;
		
		while(s.hasNextLine()){
			instruction = s.nextLine();
			tokens = instruction.split(" ");
		}
	}
}
