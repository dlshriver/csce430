package csce430;

import java.util.*;
import java.io.*;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Assembler {

	public static void main(String args[]){
		HashMap <String, String> hexOp = new HashMap<String, String>();
		hexOp.put("add", "A");
		hexOp.put("sub", "A");
		hexOp.put("and", "A");
		hexOp.put("or", "A");
		hexOp.put("xor", "A");
		hexOp.put("sll", "B");
		hexOp.put("cmp", "E");
		hexOp.put("jr", "F");
		hexOp.put("lw", "8");
		hexOp.put("sw", "9");
		hexOp.put("addi", "C");
		hexOp.put("b", "0");
		hexOp.put("bal", "4");
		hexOp.put("j", "2");
		hexOp.put("jal", "6");
		hexOp.put("li", "3");
		
		HashMap <String, String> hexCond = new HashMap<String, String>();
		hexCond.put("EQ", "0");
		hexCond.put("NE", "1");
		hexCond.put("CS", "2");
		hexCond.put("CC", "3");
		hexCond.put("MI", "4");
		hexCond.put("PL", "5");
		hexCond.put("VS", "6");
		hexCond.put("VC", "7");
		hexCond.put("HI", "8");
		hexCond.put("LS", "9");
		hexCond.put("GE", "A");
		hexCond.put("LT", "B");
		hexCond.put("GT", "C");
		hexCond.put("LE", "D");
		hexCond.put("AL", "E");
		hexCond.put("NV", "F");
		
		HashMap<String, String> branches = new HashMap<String, String>();
		
		Scanner s = null;
		
		try{
			s = new Scanner(new File("data/assembly.txt"));
		}catch (FileNotFoundException e){
			e.printStackTrace();
		}
		
		String instruction = "";
		
		String[] tokens;
		
		String op = "";
		String cond = "";
		String rs = "";
		String rt = "";
		String rd = "";
		String opx = "";
		String set = "";
		String imm = "";
		String label = "";
		String jconst = "";
		
		
		while(s.hasNextLine()){
			instruction = s.nextLine();
			tokens = instruction.split(" ");
			op = hexOp.get(tokens[0]);
			
			//R-Type
			if(tokens[0].equals("add")||tokens[0].equals("sub")||tokens[0].equals("and")||tokens[0].equals("or")||tokens[0].equals("xor")||tokens[0].equals("sll")||tokens[0].equals("sll")||tokens[0].equals("cmp")||tokens[0].equals("jr")){
				if(!tokens[1].contains("r")){
					cond = hexCond.get(tokens[1]);
					rs = tokens[2].replace("r", "");
					rt = tokens[3].replace("r", "");
					rd = tokens[4].replace("r", "");
				}else{
					cond = hexCond.get("AL");
					rs = tokens[1].replace("r", "");
					rt = tokens[2].replace("r", "");
					rd = tokens[3].replace("r", "");
				}
				rs = "";
				rt = "";
				rd = "";
				opx = "";
				set = "";
				imm = "";
				label = "";
				jconst = "";
			}
			//D-Type
			else if(tokens[0].equals("lw")||tokens[0].equals("sw")||tokens[0].equals("addi")||tokens[0].equals("si")){
				if(!tokens[1].contains("r")){
					cond = hexCond.get(tokens[1]);
				}else{
					cond = hexCond.get("AL");
				}
				rs = "";
				rt = "";
				rd = "";
				opx = "";
				set = "";
				imm = "";
				label = "";
				jconst = "";
			}
			//B-Type
			else if(tokens[0].equals("b")||tokens[0].equals("bal")){
				if(!tokens[1].contains("r")){
					cond = hexCond.get(tokens[1]);
				}else{
					cond = hexCond.get("AL");
				}
				cond = "";
				rs = "";
				rt = "";
				rd = "";
				opx = "";
				set = "";
				imm = "";
				label = "";
				jconst = "";
			}
			//J-Type
			else if(tokens[0].equals("j")||tokens[0].equals("jal")||tokens[0].equals("li")){
				cond = "";
				rs = "";
				rt = "";
				rd = "";
				opx = "";
				set = "";
				imm = "";
				label = "";
				jconst = "";
			}
		}
	}
}
